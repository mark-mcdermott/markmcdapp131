<p style="color: green"><%= notice %></p>

<h1>Scores</h1>

<%= link_to "New score", new_score_path, class: 'btn btn-primary btn-lg mb-4' %>

<div class="section-narrow">
  <table class="table">
    <tr>
      <th>#</th>
      <th>score</th>
      <th>user</th>
      <th>date</th>
      <th></th>
    <tr>
    <% @scores.each_with_index do |score, index| %>
      <tr id="<%= dom_id score %>">
        <td><%= index + 1 %></td>
        <td><%= score.val %></td>
        <td><%= User.find_by_id(score.user_id).username %></td>
        <td><%= score.created_at.strftime("%_m/%-d/%y") %>
        <td><%= link_to "Edit", 'scores/' + score.id.to_s + '/edit', class: 'btn btn-secondary btn-sm' %></td>
      </tr>
    <% end %>
  </table>
</div>
